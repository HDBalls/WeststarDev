                                    <address>
                                        <span>Vat Reg No: </span><span t-esc="doc.partner_id.vat"/><br />
                                        <span>PFI NO: </span><span t-esc="doc.name"/><br />
      <!--                                  <span>Ref: </span><span t-esc="doc.ref_number"/> -->
